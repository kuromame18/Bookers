<div>
  <%= flash[:notice] %>
</div>
<h2>Books</h2>

<body>
  <table>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th colspan ="3"></th>
    </tr>

    <% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= list.body %></td>

      <td><%= link_to "Show", list_path(list) %></td>
      <td><%= link_to "Edit", edit_list_path(list) %></td>
      <td><%= link_to "Destroy", destroy_list_path(list), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>

  </table>
</body>

<h2>New book</h2>
