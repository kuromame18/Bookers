<body>
  <h1>Editing Book</h1>
  <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div>Title</div>
    <%= f.text_field :title %>

  <div>Body</div>
    <%= f.text_area :body %>

  <p><%= f.submit 'Update Book' %></p>

  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", "/books/index" %>

  <% end %>
</body>
